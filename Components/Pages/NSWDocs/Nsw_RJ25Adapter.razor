        <pre><code class="language-cpp">
// Arduino dastur kodi
const int signalPin1 = 2; // Signal 1 chiqishi
const int signalPin2 = 3; // Signal 2 chiqishi
const int ledPin = 13; // LED chiqishi

void setup() {
    pinMode(signalPin1, INPUT);
    pinMode(signalPin2, INPUT);
    pinMode(ledPin, OUTPUT);
    Serial.begin(9600);
}

void loop() {
    int signalState1 = digitalRead(signalPin1);
    int signalState2 = digitalRead(signalPin2);
    Serial.print("Signal 1: ");
    Serial.print(signalState1);
    Serial.print(" | Signal 2: ");
    Serial.println(signalState2);
    
    if (signalState1 == HIGH || signalState2 == HIGH) {
        digitalWrite(ledPin, HIGH);
    } else {
        digitalWrite(ledPin, LOW);
    }
    delay(100);
}
        </code></pre>
